@model IEnumerable<Sistema02_MVC.Models.deparment>

@{
    ViewBag.Title = "Index";
    string nombre = "United Barcode Systems de Mexico SA de CV";
}

<h2 style="color:darkblue; text-align:center"><b>Administración de departamentos</b></h2>

<p>
    @Html.ActionLink("Crear Nuevo Departamento", "Create")
</p>
<table class="table">
    <tr style="background-color:darkgray; color:darkred">
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            <b>@Html.DisplayFor(modelItem => item.descripcion)</b>
        </td>
        <td>
           @Html.ActionLink("Editar", "Edit", new { id = item.id })  ||
            @Html.ActionLink("Detalles", "Details", new { id = item.id })  ||
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id }) 
        </td>
    </tr>
}
</table>


<h5 style="color:darkblue"><b>@nombre</b></h5>
